<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-64dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/freckle_face"
            android:text="Super map"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="60sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/startInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Nhập điểm khởi đầu"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="tdtu q7" />

        <EditText
            android:id="@+id/endInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Nhập điểm đến"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="lotte q7" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tìm đường" />

        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:height="48dp"
            android:ems="10"
            android:hint="Nhập địa điểm"
            android:inputType="textPersonName"
            android:text="TDTU q7"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/locationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tìm địa điểm" />

        <Button
            android:id="@+id/findTDTBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tìm TDTU" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>